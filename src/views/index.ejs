<%- include('parts/header.ejs')%> <%- include('parts/navbar.ejs')%>

<div class="container">
  <form action="/" method="GET">
    <h2 class="py-5">Filter</h2>
    <div class="row mb-5">
      <div class="col-md-3">
        <select name="category" id="" class="form-control">
          <option value="all">All</option>
          <option value="clothes">Clothes</option>
          <option value="phones">Phones</option>
          <option value="computers">Computers</option>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-dark">Filter</button>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-md-3">
      <% for( let product of products) {%>
      <div class="card" >
        <img src="<%=product.image%>" class="card-img-top img-fluid" style="height: 10rem" alt="..." />
        <div class="card-body">
          <h5 class="card-title">
            <a href="/product/<%=product._id%>" class="btn btn-link p-0"
              ><%=product.name%></a
            >
          </h5>

          <p class="card-text">Price : <%=product.price %> $</p>
          <p class="card-text"><%=product.description%></p>
          <form action="/cart" method="POST">
            <input type="number" name="amount" id="" class="form-control mb-2 " />
            <button type="submit" class="btn btn-primary">Add To cart</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('parts/footer.ejs')%>
